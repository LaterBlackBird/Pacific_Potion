include footer.pug

doctype html
html
  head
      block head
        title="Pacific Potion"
        link(rel='stylesheet' href='/stylesheets/navbar.css')
  body
    div(class="nav")
      a(href='/') Pacific Potion
      div(id="search")
        form(action="/search", method="post")
          input(id="searchbar" type="text" name='search' autocomplete="off" placeholder="Search for a potion...")
          button(type="submit") Search
      div(id="user-nav")
        if locals.authenticated
          div Welcome, #{user.username} !
          form(action="/logout" method="post")
              button(type="submit") Logout
        else
          a(href="/signup")
            button Sign Up
          a(href="/login")
            button(href="/login") Log In
          form(action="/demo" method="post")
            button(type="submit") Demo
    if error
      div(id='err')
        h1 Oops. Acid spilled.
        img(src='https://i.imgur.com/O5JXmQS.png')
        h2 An error has occurred.
    else
      block content
          div(id='searchbar')
      +Footer
