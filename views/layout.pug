doctype html
html
  head
      block head
        title="Pacific Potion"
        link(rel='stylesheet' href='/stylesheets/navbar.css')
  body
    div(class="nav")
      a(href='/') Pacific Potion
      div(id="search")
        input(type="text" name="searchbar" placeholder="Search for a potion..." id="searchbar")
        button Search
      div(id="user-nav")
        button(href="/signup") Sign Up
        button(href="/login") Log In

    if error
      div(id='err')
        h1 Oops. Acid spilled.
        img(src='https://i.imgur.com/O5JXmQS.png')
        h2 You've reached a 404. Please try again.
    else
      block content
